@page "/counter"

<PageTitle>Counter</PageTitle>

<MudText Typo="Typo.h3" GutterBottom="true">Counter</MudText>
<MudText Class="mb-4">Current count: @currentCount</MudText>
<MudLoadingButton Icon="@Icons.Material.Filled.Send" LoadingText="Processing..." Color="Color.Primary" Variant="Variant.Filled" OnClick="IncrementCount">Click me</MudLoadingButton>


@code {
    private int currentCount = 0;

    private async Task IncrementCount()
    {
        var v = Random.Shared.Next(0, 2000);

        await Task.Delay(v);

        if(v % 2 == 0) 
        {
            throw new Exception();
        }

        currentCount++;
    }
}
