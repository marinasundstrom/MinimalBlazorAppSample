@page "/counter"
@inject IStringLocalizer<Counter> T

<AppPageTitle>@T["PageTitle"]</AppPageTitle>

<MudText Typo="Typo.h3" GutterBottom="true">@T["PageTitle"]</MudText>
<MudText Class="mb-4">@T["CurrentCount", currentCount]</MudText>
<MudLoadingButton Icon="@Icons.Material.Filled.Send" LoadingText="@T["Processing"]" ErrorText="@T["TryAgain"]" Color="Color.Primary" Variant="Variant.Filled" OnClick="IncrementCount">@T["ClickMe"]</MudLoadingButton>


@code {
    private int currentCount = 0;

    private async Task IncrementCount()
    {
        var v = Random.Shared.Next(0, 2000);

        await Task.Delay(v);

        if(v % 2 == 0) 
        {
            throw new Exception();
        }

        currentCount++;
    }
}
